<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.kisannetwork.contactsapp.utils.CircularTextView android:id="@+id/txt_short_name"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_centerVertical="true"/>

            <RelativeLayout android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_short_name">

            <TextView android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text"
                android:padding="10dp"
                />

                <TextView android:id="@+id/txt_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/m_small_text"
                    android:layout_below="@+id/txt_name"
                    android:layout_toLeftOf="@+id/txt_time"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"/>

                <TextView android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/small_text"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txt_name"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"/>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>